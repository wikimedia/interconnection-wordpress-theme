{
    "name": "wikimedia/interconnection-wordpress-theme",
    "type": "wordpress-theme",
    "description": "Interconnection is a theme based on http://underscores.me/ intended for use on the Wikimedia Diff blog.",
    "keywords": [
        "WordPress",
        "Themes"
    ],
    "homepage": "https://github.com/wikimedia/interconnection-wordpress-theme",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Contributors",
            "homepage": "https://github.com/wikimedia/interconnection-wordpress-theme/graphs/contributors"
        }
    ],
    "require": {
        "php": ">8.0"
    },
    "require-dev": {
        "automattic/vipwpcs": "^3.0",
        "wp-cli/i18n-command": "^2.6"
    },
    "scripts": {
        "phpcs": "phpcs --standard=./phpcs.xml --extensions=php .",
        "make-pot": "wp i18n make-pot . languages/interconnection.pot"
    },
    "support": {
        "issues": "https://github.com/wikimedia/interconnection-wordpress-theme/issues",
        "source": "https://github.com/wikimedia/interconnection-wordpress-theme"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
